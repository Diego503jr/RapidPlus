<Page x:Class="Rapid_Plus.Views.Mesero.GestionClientes"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Rapid_Plus.Views.Mesero"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="950"
      Title="CrearCliente" Loaded="Page_Loaded">
    <Grid >
        <GroupBox Header="Gestión de Clientes" 
                  Height="200" 
                  Margin="100,50" 
                  VerticalAlignment="Top" 
                  materialDesign:ColorZoneAssist.Background="{StaticResource c-grey}"
                  materialDesign:ColorZoneAssist.Foreground="White" 
                  materialDesign:ColorZoneAssist.Mode="Custom"
                  Style="{StaticResource MaterialDesignGroupBox}" 
                  FontSize="20" 
                  Width="750">
            <StackPanel Orientation="Horizontal" 
                        VerticalAlignment="Center" 
                        Width="650" 
                        Margin="0,0,0,30" 
                        Height="55" 
                        HorizontalAlignment="Center" >
                <TextBox Name="txtNombre" 
                         Width="300" 
                         Margin="0,0,55,0" 
                         FontSize="20" 
                         materialDesign:HintAssist.Hint="Nombre Cliente" 
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         PreviewTextInput="txtNombre_PreviewTextInput"/>
                <TextBox Name="txtApellido" 
                         Width="300" 
                         FontSize="20" 
                         materialDesign:HintAssist.Hint="Apellido Cliente" 
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" 
                         PreviewTextInput="txtApellido_PreviewTextInput"/>
            </StackPanel>
        </GroupBox>
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal" 
                    Margin="0,0,0,120" >
            <Label Content="Buscar cliente: " 
                   Margin="0,0,30,0" 
                   FontSize="20"></Label>
            <TextBox Name="txtFiltro" 
                     Width="225" 
                     FontSize="20" 
                     TextChanged="txtFiltro_TextChanged" 
                     PreviewTextInput="txtFiltro_PreviewTextInput" ></TextBox>
        </StackPanel>
        <ScrollViewer VerticalScrollBarVisibility="Auto" 
                      VerticalAlignment="Center" 
                      Width="400" 
                      Height="275" 
                      Margin="0,200,0,0" 
                      HorizontalAlignment="Center">
            <DataGrid Name="dgClientes" 
                      AutoGenerateColumns="False" 
                      IsReadOnly="true" 
                      ItemsSource ="{Binding}" 
                      Background="{x:Null}" 
                      FontSize="16" 
                      SelectionChanged="dgClientes_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Nombre"   CanUserResize="False" Binding="{Binding NombreCliente}"/>
                    <DataGridTextColumn Header="Apellido" CanUserResize="False" Binding="{Binding ApellidoCliente}"/>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Orientation="Horizontal" Margin="0,0,0,60">
            <Button Name="btnCrear"    
                    Content="Crear" 
                    Width="100" 
                    BorderBrush="{x:Null}" 
                    Height="40" 
                    Margin="0,0,0,0" 
                    FontSize="18" 
                    Background="{StaticResource c-grey}" 
                    Foreground="{StaticResource c-light}"
                    Click="btnCrear_Click"/>
            <Button Name="btnEditar" 
                    Content="Editar" 
                    Width="100" 
                    BorderBrush="{x:Null}" 
                    Height="40" 
                    Margin="40,0,0,0" 
                    FontSize="18" 
                    Background="{StaticResource c-grey}" 
                    Foreground="{StaticResource c-light}"
                    Click="btnEditar_Click"/>
            <Button Name="btnGuardar" 
                    Content="Guardar" 
                    Width="100" 
                    BorderBrush="{x:Null}" 
                    Background="{StaticResource c-success}"
                    Foreground="{StaticResource c-light}"
                    Height="40" 
                    Margin="150,0,0,0" 
                    FontSize="18" 
                    Click="btnGuardar_Click"/>
            <Button Name="btnCancelar" 
                    Content="Cancelar" 
                    Width="100" 
                    BorderBrush="{x:Null}"
                    Background="{StaticResource c-danger}"
                    Foreground="{StaticResource c-light}"
                    Height="40" 
                    Margin="40,0,0,0" 
                    FontSize="18" 
                    Click="btnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Page>
